<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.news.mapper.SecondHandMapper">


	<insert id="insert" parameterType="com.news.vo.SecondHandGoodVo"
		keyProperty="id" useGeneratedKeys="true">
		insert into good_publish
		(name,price,desc,images,address,feature,link_person,link_way,user_id,product_id,sub_product_id,title,publish_time,create_time,update_time,is_del)
		values
		(#{name},#{price},#{desc},#{images},#{address},#{feature},#{linkPerson},#{linkWay},#{userId},#{productId},#{subProductId},#{title},#{publishTime},now(),now(),'0')
	</insert>

	<select id="getCount" parameterType="com.news.vo.MySecondHandVo"
		resultType="int">
		select count(*) from good_publish
		<where>
			<if test="userId!=null">
				and user_id=#{userId}
			</if>
			<if test="productId!=null">
				and product_id=#{productId}
			</if>
			<if test="subProductId!=null">
				and sub_product_Id=#{subProductId}
			</if>
		</where>
	</select>

	<select id="selectList" parameterType="com.news.vo.MySecondHandVo"
		resultType="com.news.model.SecondHandGood">
		select * from good_publish
		<where>
			<if test="userId!=null">
				and user_id=#{userId}
			</if>
			<if test="productId!=null">
				and product_id=#{productId}
			</if>
			<if test="subProductId!=null">
				and sub_product_Id=#{subProductId}
			</if>
		</where>
		order by publish_time desc
		limit ${pageIndex},#{pageSize}
	</select>

	<select id="getCategoryList" resultType="com.news.dto.CategoryDto">
		select * from ${tableName}_category
	</select>
	
</mapper>
